{
    "compilerOptions": {
        "target": "es2023",
        "module": "node18",
        "moduleResolution": "nodenext",
        "declaration": true,
        "declarationDir": "./dist/esm",
        "outDir": "./dist/esm",
        "rootDir": "./src/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noImplicitAny": false,
        "baseUrl": ".",
    },
    "include": [
        "./src/**/*",
    ]
}